<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="ControlBorderBrushColor">#BE000000</Color>
    <Color x:Key="ControlBackgroundColor">#FFFAFAFA</Color>
    
    <SolidColorBrush x:Key="ControlBorderBrush"
                     Color="{StaticResource ControlBorderBrushColor}" />
    <SolidColorBrush x:Key="ControlBackground"
                     Color="{StaticResource ControlBackgroundColor}" />
</ResourceDictionary>